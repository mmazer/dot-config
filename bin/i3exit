#!/bin/bash
# https://faq.i3wm.org/question/239/how-do-i-suspendlockscreen-and-logout.1.html
# vim: ft=sh :

script=$(basename $0)

lock() {
    i3lock
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $script {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
