#!/bin/bash

LOG=${MY_LOG:-$HOME/.log}

usage () {
    sed -e 's/^//' <<End
Usage: log [-ehl] [-a text] [-f file]
-a add log entry
-e edit log using $EDITOR 
-f use file for log
-h show help
End
    exit 1
}

check_log () {
if [ ! -f "$1" ]; then
    echo "creating log file: $1"
    touch "$1"
    if [ $? -ne 0 ]; then
        echo "error creating log file $1: $?"
        exit 1
    fi
    chmod 644 "$1"
fi
}

datetime=`date "+%Y-%m-%d %H:%M"`
action="list"
logfile="$LOG"
while getopts aef:h opt
do case "$opt" in
    a) action="add";;
    e) action="edit";;
    f) logfile="$OPTARG" ;;
    h) action="help";;
    \?) usage;;
    esac
done

check_log $logfile

case $action in
    help) usage;;
    edit) $EDITOR "$logfile";;
    add) 
        shift $((OPTIND-1))
        echo "$datetime $@" >> $logfile
        ;;
    list)
        cat $logfile
        ;;
    *)
        ;;
esac
