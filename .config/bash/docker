# docker
alias dc='docker-compose'
alias dm='docker-machine'
alias docker-alias='alias | grep docker'
alias docker-clean='docker rmi -f $(docker images -q)'
alias docker-grep='docker ps | grep'
alias docker-prune='docker system prune --all --volumes'
alias docker-df='docker system df'
alias docker-env='eval $(docker-machine env default)'
alias docker-unset='unset ${!DOCKER_*}'
alias docker-exec='docker exec -it'
alias docker-stop='docker stop $(docker ps -a -q)'
alias docker-killall='docker kill $(docker ps -q)'
alias docker-pause='docker pause $(docker ps -q)'
alias docker-ps='docker ps -a'
alias docker-rm='docker rm $(docker ps -a -q)'
alias docker-run='docker run -it'
alias docker-runbash='docker run -it --entrypoint=bash'
alias docker-ip='docker inspect -f "{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}"'
alias docker-ips='for d in $(docker ps -q); do echo -n "$d=>"; docker-ip $d; done'
alias env-docker='env | grep DOCKER'
