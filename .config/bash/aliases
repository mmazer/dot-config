# vim: set ft=sh :
alias bye=exit
alias cd..='cd ..'
alias cfg='git --git-dir=$HOME/.cfg --work-tree=$HOME'
alias cls='clear'
alias ch='history -cw'
alias cpdir='cp -R'
alias curls='curl -s'
alias del='rm -f'
alias dused='df -kHal'
alias grenv='env | grep'
alias h='history'
if [ -f "${HOME}/.i3/config" ]; then
    alias i3cfg='$EDITOR ${HOME}/.i3/config'
fi
alias j=bookmarkjump
alias ls='ls --color'
alias ll='ls -la'
alias lstat='echo $?'
alias lsz='ls -laS'
alias lt='ls -ltr'
alias lu='ls -ltur'
alias lr='ls -lR'
alias lp='ls -al | $PAGER'
alias mark='bookmark'
alias marks='bookmarksshow'
alias mkdir='mkdir -p'
alias mkexe='chmod 755'
alias mkrd='chmod 644'
alias nv=nvim
alias pip='python3 -m pip'
alias pg='$PAGER'
alias psgrep='ps auxw | grep'
alias rebash='source ~/.bashrc'
alias real='source ~/.config/bash/aliases'
alias rm='rm -i'
alias rmdir='rm -rf'
alias term='echo $TERM'
alias tclear='tmux clear-history'
alias path='echo $PATH'
alias rand='echo $RANDOM'
alias rehash='hash -r'
alias so=source
alias th='history | tail -12'
alias vdiff='$__VIM -d'
alias utc='date -u'
alias xdgenv='env | grep ^XDG'

# calendars
alias mon='cal -m'
alias yc='cal $(date "+%Y")'

