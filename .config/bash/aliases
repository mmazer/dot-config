alias bye=exit
alias cd..='cd ..'
alias cfg='git --git-dir=$HOME/.cfg --work-tree=$HOME'
alias cls='clear'
alias ch='history -cw'
alias cpdir='cp -R'
alias cplast='fc -ln -1 | awk '\''{$1=$1}1'\'' ORS='\'''\'' | pbcopy'
alias curls='curl -s'
alias del='rm -f'
alias dused='df -kHal'
alias ed=$EDITOR
alias h='history'
alias j=bookmarkjump
alias json='python -m json.tool'
alias ls='ls -F'
alias la='ls -aF'
alias ldir='ls -d */'
alias lhd='ls -d .*/'
alias links='ls -ahlF | grep ^l'
alias ll='ls -la'
alias lstat='echo $?'
alias lsz='ls -laS'
alias lt='ls -ltr'
alias lu='ls -ltur'
alias lr='ls -lR'
alias lp='ls -al | $PAGER'
alias mark='bookmark'
alias marks='bookmarksshow'
alias mkdir='mkdir -p'
alias mkexe='chmod 755'
alias mkrd='chmod 644'
alias pg='$PAGER'
alias rebash='source ~/.bashrc'
alias real='source ~/.config/bash/aliases'
alias rm='rm -i'
alias rmdir='rm -rf'
alias term='echo $TERM'
alias tclear='tmux clear-history'
alias path='echo $PATH'
alias so=source
alias someday='cat $XDG_DATA_HOME/someday.txt'
alias th='history | tail -12'
alias vdiff='vim -d'
alias utc='date -u'
alias xdg='env | grep ^XDG'

# calendars
alias mon='cal -m'
alias yc='cal $(date "+%Y")'

