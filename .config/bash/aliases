alias bye=exit
alias cd..='cd ..'
alias cfg='git --git-dir=$HOME/.cfg --work-tree=$HOME'
alias cls='clear'
alias ch='history -cw'
alias cpdir='cp -R'
alias cplast='fc -ln -1 | awk '\''{$1=$1}1'\'' ORS='\'''\'' | pbcopy'
alias curls='curl -s'
alias del='rm -f'
alias dused='df -kHal'
alias ed=$EDITOR
alias ga='git add'
alias gA='git commit --amend'
alias gci='git commit'
alias gco='git checkout'
alias gcv='git commit --verbose'
alias gd='git diff'
alias gh='git hist'
alias gr='cd `git rev-parse --git-dir`; cd ..'
alias gs='git status'
alias h='history'
alias j=bookmarkjump
alias json='python -m json.tool'
alias ls='ls -F'
alias la='ls -aF'
alias ldir='ls -d */'
alias lhd='ls -d .*/'
alias links='ls -ahlF | grep ^l'
alias ll='ls -la'
alias lstat='echo $?'
alias lsz='ls -laS'
alias lt='ls -ltr'
alias lu='ls -ltur'
alias lr='ls -lR'
alias lp='ls -al | $PAGER'
alias mark='bookmark'
alias marks='bookmarksshow'
alias mkdir='mkdir -p'
alias mkexe='chmod 755'
alias mkrd='chmod 644'
alias netl='netstat -naf inet | grep LISTEN'
alias pg='$PAGER'
alias py='python'
alias py3='python3'
alias rebash='source ~/.bashrc'
alias real='source ~/.config/bash/aliases'
alias rm='rm -i'
alias rmdir='rm -rf'
alias term='echo $TERM'
alias tclear='tmux clear-history'
alias path='echo $PATH'
alias ssh-hosts='grep -w Host ~/.ssh/config'
alias so=source
alias th='history | tail -12'
alias vdiff='vim -d'
alias vi=nvim
alias utc='date -u'

# vagrant
alias vg=vagrant
alias vssh='vagrant ssh'
alias vsync='vagrant rsync'
alias vscp='vagrant scp'
alias vstat='vagrant status'
alias vup='vagrant up'

# aws
alias s3='aws s3 --profile ${AWS_PROFILE:-s3}'
alias s3api='aws s3api --profile s3'

# calendars
alias mc='cal -m $(date "+%m")'
alias mon='cal -m'
alias yc='cal $(date "+%Y")'

