alias bye=exit
alias cd..='cd ..'
alias cfg='git --git-dir=$HOME/.cfg --work-tree=$HOME'
alias cls='clear'
alias clh='history -cw'
alias cpdir='cp -R'
alias ddir='rm -rf'
alias del='rm -f'
alias dused='df -kHal'
alias e=$EDITOR
alias findcvs='find . -type d -name CVS && find . -name .cvsignore'
alias findsvn='find . -type d -name .svn'
alias focus='if [ -f ~/.focus ]; then cat ~/.focus; else echo "No focus?"; fi'
alias fn='find . -iname'
alias g='git'
alias ga='git add'
alias gA='git commit --amend'
alias gc='git commit'
alias gcv='git commit --verbose'
alias gd='git diff'
alias gh='git hist'
alias gl='git hist'
alias gr='cd `git rev-parse --git-dir`; cd ..'
alias gs='git status'
alias h='history'
alias la='ls -a'
alias ldir='ls -d */'
alias lhd='ls -d .*/'
alias links='ls -ahlF | grep ^l'
alias ll='ls -la'
alias lstat='echo $?'
alias lsz='ls -laS'
alias lt='ls -ltr'
alias lu='ls -ltur'
alias lr='ls -lR'
alias lp='ls -al | $PAGER'
alias mark='bookmark'
alias marks='bookmarksshow'
alias mkdir='mkdir -p'
alias mkexe='chmod 755'
alias mkrd='chmod 644'
alias netl='netstat -naf inet | grep LISTEN'
alias nv=nvim
alias pg='$PAGER'
alias pp='python -m json.tool'
alias py='python'
alias py3='python3'
alias rebash='source ~/.bashrc'
alias real='source ~/.config/bash/aliases'
alias rem='if [ -f ~/.reminders ]; then cat ~/.reminders; else echo "No reminders?"; fi'
alias rm='rm -i'
alias rmbak='rm -iv *.bak'
alias rmsvn='find . -type d -name .svn | xargs rm -rv'
alias term='echo $TERM'
alias path='echo $PATH'
alias ssh-hosts='grep -w Host ~/.ssh/config'
alias th='history | tail -12'
alias vim=nvim
alias vdiff='nvim -d'

# docker
alias dc='docker-compose'
alias dm='docker-machine'
alias docker-clean='docker rmi -f $(docker images -q)'
alias docker-env='eval $(docker-machine env default)'
alias docker-unset='unset ${!DOCKER_*}'
alias docker-exec='docker exec -it'
alias docker-stop='docker stop $(docker ps -a -q)'
alias docker-kill='docker kill $(docker ps -q)'
alias docker-rm='docker rm $(docker ps -a -q)'
alias docker-pause='docker pause $(docker ps -q)'
alias docker-ps='docker ps -a'

# vagrant
alias vg=vagrant
alias vssh='vagrant ssh'
alias vsync='vagrant rsync'
alias vscp='vagrant scp'
alias vstat='vagrant status'
alias vup='vagrant up'

# aws
alias s3='aws s3 --profile s3'
alias s3api='aws s3api --profile s3'

# calendars
alias mc='cal -m $(date "+%m")'
alias mon='cal -m'
alias yc='cal $(date "+%Y")'

