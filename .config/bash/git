alias ggcv='git commit --verbose'
alias gga='git add'
alias ggb='git checkout -b'
alias ggc='git checkout'
alias ggci='git commit'
alias ggcA='git commit --amend'
alias ggd='git diff'
alias ggh='git hist'
alias ggm='git checkout master'
alias ggpl='git pull origin'
alias ggps='git push origin'
alias ggdir='cd `git rev-parse --git-dir`; cd ..'
alias ggs='git status'

[ -f $HOME/.local/share/bash_completion.d/git-completion.bash ]  && \
    source $HOME/.local/share/bash_completion.d/git-completion.bash

[ -f $HOME/.local/share/bash_completion.d/git-prompt.sh ] && \
    source $HOME/.local/share/bash_completion.d/git-prompt.sh

ghb() {
    __open ${GITHUB_DOMAIN:-https://github.com}/$1
}
