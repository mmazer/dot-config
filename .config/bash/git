alias ga='git add'
alias gA='git commit --amend'
alias gci='git commit'
alias gco='git checkout'
alias gcv='git commit --verbose'
alias gd='git diff'
alias gh='git hist'
alias gplm='git pull origin master'
alias gpsh='git push origin HEAD'
alias gpsm='git push origin master'
alias gr='cd `git rev-parse --git-dir`; cd ..'
alias gs='git status'

[ -f $HOME/.local/share/bash_completion.d/git-completion.bash ]  && \
    source $HOME/.local/share/bash_completion.d/git-completion.bash

[ -f $HOME/.local/share/bash_completion.d/git-prompt.sh ] && \
    source $HOME/.local/share/bash_completion.d/git-prompt.sh

ghb() {
    __open ${GITHUB_DOMAIN:-https://github.com}/$1
}
