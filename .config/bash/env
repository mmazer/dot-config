export PATH=~/bin:~/.local/bin:~/go/bin:/usr/local/bin:/usr/local/sbin:$PATH
export EDITOR='nvim'
# for use in bash vi mode - type `v` to edit current command
export VISUAL='nvim'

# PAGER
if test -n "$(command -v less)" ; then
    PAGER="less"
    MANPAGER="less"
else
    PAGER=more
    MANPAGER="$PAGER"
fi
export PAGER MANPAGER

export XDG_CONFIG_HOME=$HOME/.config
export XDG_DATA_HOME=$HOME/.local/share
export XDG_CACHE_HOME=$HOME/.cache

# use XDG directories for vim
export VIMINIT='let $MYVIMRC="$XDG_CONFIG_HOME/vim/vimrc" | source $MYVIMRC'

# Misc
export SDIRS=$XDG_DATA_HOME/bashmarks
export USERVAR=~/.var

