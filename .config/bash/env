export PATH=~/bin:~/.local/bin:/usr/local/bin:/usr/local/sbin:$PATH
export EDITOR='nvim -u ~/.config/nvim/minimal.vim --noplugin'

# PAGER
if test -n "$(command -v less)" ; then
    PAGER="less"
    MANPAGER="less"
else
    PAGER=more
    MANPAGER="$PAGER"
fi
export PAGER MANPAGER

# Misc
export SDIRS=~/.bashmarks
export USERVAR=~/.var

